<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">


<div id='map' style='width: 100%; height: 300px;'></div>

<h1><%= hotel.title %></h1>
<h2><%= hotel.address %></h2>

<% if(currentUser) {%> 
<a href="/hotels/<%=hotel._id %>/newReview">Leave a Review</a>
<% } %> 

<% for(let review of hotel.reviews) { %>
    <div class="card mb-3 ">
        <div class="card-body">
            <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%= review.rating %> stars
            </p>
            <p class="card-text">Review: <%= review.body %></p>
            <p class="card-text">Author: <%= review.author.username %></p>
        </div>

        <div id="reviewCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% review.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>

            </div>
            <% if(review.images.length > 1) {%>
            <a class="carousel-control-prev" href="#reviewCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#reviewCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>

        <% if (currentUser && review.author.equals(currentUser._id)) {%> 
        <div class="card-body">
            <a class="card-link btn btn-info" href="/hotels/<%=hotel._id%>/editReview/<%=review._id%> ">Edit</a>
            <form class="d-inline" action="/hotels/<%=hotel._id%>/deleteReview/<%=review._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <% } %> 
    </div>
<% } %>


<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const hotel = <%- JSON.stringify(hotel) %>
</script>

<script src="/javascripts/showPageMap.js"></script>